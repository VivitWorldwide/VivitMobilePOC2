<widget	xmlns="http://www.w3.org/ns/widgets"
		xmlns:gap="http://phonegap.com/ns/1.0"
		id="com.vivit.worldwide.mobile.poc2"
		version="1.0.0"
		android-versionCode="170570"
		ios-CFBundleVersion="170570">

	<!--===============================================================================
	 | PhoneGap information.
	 ================================================================================-->

    <name>VivitMobilePOC2</name>
    <description>Proof of concept app to experiment with getting the technologies in place.</description>
    <author email="IT.Support@vivit-worldwide.org" href="http://www.vivit-worldwide.org">Vivit Worldwide</author>
    <content src="index.html" />
    <access origin="*" />


	<!--===============================================================================
	 | Need to figure out how to make the icons platform specific.
	 ================================================================================-->
    <icon src="www/platforms/android/icon/vivit_logo_hdpi.png" />


	<!--===============================================================================
	 | Android specific preferences.
	 ================================================================================-->
    <platform name="android">
        <preference name="android-targetSdkVersion" value="25" />
    </platform>


	<!--===============================================================================
	 | iOS specific preferences.
	 ================================================================================-->
    <platform name="ios" />


	<!--===============================================================================
	 | PhoneGap/Cordova plugins.
	 ================================================================================-->
    <plugin name="cordova-plugin-whitelist" spec="~1.3.1" />


	<!--===============================================================================
	 | Whitelisted URLs.
	 ================================================================================-->
    <allow-navigation href="http://www.vivit-worldwide.org/*" />
    <allow-navigation href="https://vivitworldwide.site-ym.com/*" />
    <allow-navigation href="http://c.ymcdn.com/*" />
</widget>
